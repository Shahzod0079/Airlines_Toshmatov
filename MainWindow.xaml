<Window x:Class="Airlines_Toshmatov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Airlines_Toshmatov"
        mc:Ignorable="d"
        Title="Управление авиалиниями" Height="644" Width="817" MinHeight="450" MinWidth="800">

    <Grid>

        <Grid Height="60" VerticalAlignment="Top" Background="#FF0C73FF">
            <TextBlock Width="42" 
                       Height="42" 
                       VerticalAlignment="Top" 
                       HorizontalAlignment="Left" 
                       Margin="20,3,0,0"
                       Text="✈"
                       FontSize="32"
                       Foreground="White"
                       TextAlignment="Center"/>

            <Label VerticalAlignment="Top" 
                   HorizontalAlignment="Left" 
                   Content="Управление авиалиниями" 
                   Foreground="White" 
                   Margin="74,8,0,0" 
                   FontSize="16"/>

            <Button VerticalAlignment="Top" 
                    HorizontalAlignment="Right" 
                    Width="100" 
                    Height="25" 
                    Content="Выйти" 
                    Margin="0,8,10,0" 
                    Background="White" 
                    Click="Exit_Click"/>
        </Grid>

        <Frame x:Name="frame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>