<Page x:Class="Airlines_Toshmatov.Pages.Ticket"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="White"
      Title="Ticket">

    <Grid Height="450" Width="800" MinHeight="450" MinWidth="800">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Grid Background="#FF0C73FF">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="✈" Foreground="White" FontSize="24" VerticalAlignment="Top" Margin="15,16,11,0" RenderTransformOrigin="0.5,0.5">
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="19.717"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
            <TextBlock Grid.Column="1" Text="Управление авиалиниями" Foreground="White" FontSize="18" VerticalAlignment="Center" Margin="0,0,0,0"/>
            <Button Grid.Column="1" Content="Вернуться" Width="100" Height="25" HorizontalAlignment="Left" Background="White" Margin="614,0,0,0" VerticalAlignment="Center" Click="Back" Grid.ColumnSpan="2"/>
        </Grid>

        <!-- КОНТЕЙНЕР ДЛЯ КАРТОЧЕК РЕЙСОВ -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel x:Name="FlightsContainer" Margin="30,15,30,15">
                <!-- Сюда будут динамически добавляться карточки рейсов из БД -->
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>