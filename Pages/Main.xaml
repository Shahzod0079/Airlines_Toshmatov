<Page x:Class="Airlines_Toshmatov.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Airlines_Toshmatov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main">

    <Grid Background="#FF0C73FF">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Margin="0,20,0,20" Width="783">
                <Label Content="Поиск дешевых авиабилетов" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Top" 
                       FontSize="16" 
                       Margin="0,20,0,0" 
                       Foreground="White"/>

                <Label Content="Лучший способ купить авиабилеты дешево" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Top" 
                       Margin="0,55,0,0" 
                       Foreground="White"/>

                <Label Content="Откуда:" 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Top" 
                       Margin="275,90,0,0" 
                       Foreground="White"/>

                <TextBox x:Name="from" 
                         Width="250" 
                         Height="25" 
                         HorizontalAlignment="Center" 
                         VerticalAlignment="Top" 
                         Margin="0,120,0,0" />

                <Label Content="Куда:" 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Top" 
                       Margin="275,155,0,0" 
                       Foreground="White"/>

                <TextBox x:Name="to" 
                         Width="250" 
                         Height="26" 
                         HorizontalAlignment="Center" 
                         VerticalAlignment="Top" 
                         Margin="0,185,0,0" />

                <Label Content="Дата туда:" 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Top" 
                       Margin="275,220,0,0" 
                       Foreground="White"/>

                <DatePicker x:Name="DepartureDate" 
                            Width="250" 
                            Height="26" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Top" 
                            Margin="0,250,0,0"/>

                <Label Content="Дата обратно:" 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Top" 
                       Margin="275,285,0,0" 
                       Foreground="White"/>

                <DatePicker x:Name="ReturnDate" 
                            Width="250" 
                            Height="26" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Top" 
                            Margin="0,315,0,0"/>

                <Button x:Name="searchButton"
                        VerticalAlignment="Top" 
                        HorizontalAlignment="Right" 
                        Width="100" 
                        Height="25" 
                        Content="Найти" 
                        Margin="0,355,275,0" 
                        Background="#FF4000" 
                        Foreground="White"
                        Click="Search"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>