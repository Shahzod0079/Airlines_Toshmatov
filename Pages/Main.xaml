<Page x:Class="Airlines_Toshmatov.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Airlines_Toshmatov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main">

    <Grid Background="#FF0C73FF">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Основной контент -->
        <Grid Margin="0,10,0,0" Grid.RowSpan="2">
            <Label Content="Поиск дешевых авиабилетов" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   FontSize="16" 
                   Margin="0,59,0,0" 
                   Foreground="White"/>

            <Label Content="Лучший способ купить авиабилеты дешево" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   Margin="0,95,0,0" 
                   Foreground="White"/>

            <Label Content="Откуда:" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top" 
                   Margin="275,121,0,0" 
                   Foreground="White"/>

            <TextBox x:Name="from" 
                     Width="250" 
                     Height="25" 
                     HorizontalAlignment="Center" 
                     VerticalAlignment="Top" 
                     Margin="0,152,0,0" />

            <Label Content="Куда:" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top" 
                   Margin="275,182,0,0" 
                   Foreground="White"/>

            <TextBox x:Name="to" 
                     Width="250" 
                     Height="26" 
                     HorizontalAlignment="Center" 
                     VerticalAlignment="Top" 
                     Margin="0,213,0,0" />

            <!-- Дата туда -->
            <Label Content="Дата туда:" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top" 
                   Margin="275,243,0,0" 
                   Foreground="White"/>

            <DatePicker x:Name="DepartureDate" 
                        Width="250" 
                        Height="26" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Top" 
                        Margin="0,273,0,0"/>

            <!-- Дата обратно -->
            <Label Content="Дата обратно:" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top" 
                   Margin="275,303,0,0" 
                   Foreground="White"/>

            <DatePicker x:Name="ReturnDate" 
                        Width="250" 
                        Height="26" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Top" 
                        Margin="0,333,0,0"/>

            <!-- Кнопка Найти -->
            <Button x:Name="searchButton"
                    VerticalAlignment="Top" 
                    HorizontalAlignment="Right" 
                    Width="100" 
                    Height="25" 
                    Content="Найти" 
                    Margin="0,371,275,0" 
                    Background="#FF4000" 
                    Foreground="White"
                    Click="Search"/>
        </Grid>
    </Grid>
</Page>