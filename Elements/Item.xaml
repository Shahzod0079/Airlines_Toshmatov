<UserControl x:Class="Airlines_Toshmatov.Elements.Item"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="White"
      Height="125" Width="700">  <!-- Реальная высота карточки -->

    <!-- Карточка билета -->
    <Border Background="#E4E4E4"
            Padding="10"
            Height="125"
            CornerRadius="6">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 1 колонка: цена + кнопка -->
            <TextBlock Grid.Column="0" 
                       Text="{Binding price}"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="10,5,36,0" 
                       Grid.ColumnSpan="2"/>

            <Button Grid.Column="0" 
                    Content="Подробнее"
                    Background="#FF5722"
                    Foreground="White"
                    Margin="2,44,3,0"
                    Width="100"
                    Height="30" 
                    VerticalAlignment="Top"/>

            <!-- 2 колонка: левый рейс -->
            <TextBlock Grid.Column="2" 
                       Text="pobeda"
                       FontWeight="Bold" 
                       Margin="10,3,86,0" 
                       Height="18" 
                       VerticalAlignment="Top"/>

            <TextBlock Grid.Column="2" 
                       Text="{Binding time_start}"
                       FontSize="16" 
                       Margin="10,27,86,0" 
                       Height="23" 
                       VerticalAlignment="Top"/>

            <TextBlock Grid.Column="2" 
                       Text="{Binding from}"
                       Margin="10,55,86,0" 
                       Height="26" 
                       VerticalAlignment="Top"/>

            <TextBlock Grid.Column="2" 
                       Text="{Binding date}"
                       FontSize="12" 
                       Foreground="Gray"
                       Margin="10,81,86,0" 
                       Height="16" 
                       VerticalAlignment="Top"/>

            <!-- 3 колонка: линия + самолёты -->
            <TextBlock Grid.Column="2" 
                       Text="✈"
                       FontSize="16" 
                       Foreground="White"
                       Width="25"
                       Height="25"
                       TextAlignment="Center"
                       Margin="49,35,114,0" 
                       RenderTransformOrigin="0.179,0.478" 
                       VerticalAlignment="Top">
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="14.712"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>

            <!-- Линия -->
            <Border Background="Gray" 
                    Grid.Column="2" 
                    Grid.ColumnSpan="2" 
                    Margin="53,61,-226,0"
                    Height="3" 
                    VerticalAlignment="Top"/>

            <!-- Самолет посадки -->
            <TextBlock Grid.Column="3"
                       Text="✈"
                       FontSize="16" 
                       Foreground="White"
                       Width="25"
                       Height="25"
                       TextAlignment="Center"
                       Margin="205,32,-227,0" 
                       RenderTransformOrigin="0.5,0.5" 
                       VerticalAlignment="Top">
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="81.641"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>

            <!-- Текст "В пути" -->
            <TextBlock Text="{Binding time_way}"
                       FontSize="12" 
                       Grid.Column="3" 
                       Margin="17,38,-99,0" 
                       Height="18" 
                       VerticalAlignment="Top"/>

            <!-- 4 колонка: правый рейс -->
            <TextBlock Grid.Column="3"
                       Text="pobeda"
                       FontWeight="Bold" 
                       Margin="232,3,-277,0" 
                       Height="36" 
                       VerticalAlignment="Top"/>

            <TextBlock Grid.Column="3"
                       Text="06:05"
                       FontSize="16" 
                       Margin="232,24,-267,0" 
                       Height="21" 
                       VerticalAlignment="Top"/>

            <TextBlock Grid.Column="3"
                       Text="{Binding to}"
                       Margin="232,55,-267,0" 
                       Height="19" 
                       VerticalAlignment="Top"/>

            <TextBlock Grid.Column="3"
                       Text="{Binding date}"
                       FontSize="12" 
                       Foreground="Gray"
                       Margin="232,76,-323,0" 
                       Height="13" 
                       VerticalAlignment="Top"/>
        </Grid>
    </Border>
</UserControl>